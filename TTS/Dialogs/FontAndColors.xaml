<Window x:Class="TTS.Dialogs.FontAndColors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTS.Dialogs"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="FontAndColors"
        Height="450"
        Width="800">
    <StackPanel>
        <Border>
            <Border.Child>
                <StackPanel>
                    <StackPanel
                        Orientation="Horizontal">
                        <Border
                            BorderThickness="1"
                            BorderBrush="LightGray">
                            <Border.Child>
                                <Canvas
                                    Margin="10 15"
                                    Width="500"
                                    Height="200">
                                    <StackPanel
                                        Orientation="Horizontal">
                                        <TextBlock
                                            x:Name="textColorLabel"
                                            Text="Тест&#10;Тест"/>
                                        <TextBlock
                                            x:Name="glowColorLabel"
                                            Text="Тест&#10;Тест"/>
                                        <TextBlock
                                            x:Name="selectionColorLabel"
                                            Text="Тест&#10;Тест"/>
                                        <TextBlock
                                            x:Name="selectionTextColorLabel"
                                            Text="Тест&#10;Тест"/>
                                    </StackPanel>
                                </Canvas>
                            </Border.Child>
                        </Border>
                        <StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="125"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Шрифт"/>
                                <Button
                                    Margin="15 0"
                                    Click="IncreaseFontSizeHandler">
                                    <Button.Content>
                                        <materialDesign:PackIcon
                                            Margin="5"
                                            Kind="ArrowUp"/>
                                    </Button.Content>
                                </Button>
                                <Button
                                    Margin="15 0"
                                    Click="DecreaseFontSizeHandler">
                                    <Button.Content>
                                        <materialDesign:PackIcon
                                            Margin="5"
                                            Kind="ArrowDown"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="185"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Цвет текста"/>
                                <toolkit:ColorPicker
                                    x:Name="textColorPicker"
                                    Width="24"
                                    Height="24"
                                    Margin="15 0"
                                    ShowDropDownButton="False"
                                    SelectedColorChanged="ToggleTextColorHandler"/>
                            </StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="185"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Цвет фона"/>
                                <toolkit:ColorPicker
                                    x:Name="backgroundColorPicker"
                                    Width="24"
                                    Height="24"
                                    Margin="15 0"
                                    ShowDropDownButton="False"
                                    SelectedColorChanged="ToggleBackgroundColorHandler"/>
                            </StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="185"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Цвет подсветки"/>
                                <toolkit:ColorPicker
                                    x:Name="glowColorPicker"
                                    Width="24"
                                    Height="24"
                                    Margin="15 0"
                                    ShowDropDownButton="False"
                                    SelectedColorChanged="ToggleGlowColorHandler"/>
                            </StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="185"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Цвет выделенния"/>
                                <toolkit:ColorPicker
                                    x:Name="selectionColorPicker"
                                    Width="24"
                                    Height="24"
                                    Margin="15 0"
                                    ShowDropDownButton="False"
                                    SelectedColorChanged="ToggleSelectionColorHandler"/>
                            </StackPanel>
                            <StackPanel
                                Margin="0 5"
                                Orientation="Horizontal">
                                <Button
                                    Width="185"
                                    Height="25"
                                    Margin="15 0"
                                    Content="Выделенный текст"/>
                                <toolkit:ColorPicker
                                    x:Name="selectionTextColorPicker"
                                    Width="24"
                                    Height="24"
                                    Margin="15 0"
                                    ShowDropDownButton="False"
                                    SelectedColorChanged="ToggleSelectionTextColorHandler"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Orientation="Horizontal">
                        <CheckBox
                            VerticalAlignment="Center"
                            Margin="15 0"
                            Content="Высота строк"/>
                        <toolkit:IntegerUpDown
                            VerticalAlignment="Center"
                            Margin="15 0"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            ValueChanged="ToggleLineHeightHandler"/>
                    </StackPanel>
                    <TextBlock
                        Text="Теги XML"
                        Margin="15 5"/>
                    <Border
                        Margin="15"
                        BorderThickness="1"
                        BorderBrush="LightGray">
                        <Border.Child>
                            <DockPanel
                                Margin="15">
                                <CheckBox
                                    Content="Сделать теги XML прозрачными"/>
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <StackPanel
                                        Width="250">
                                        <Slider
                                            VerticalAlignment="Center"
                                            />
                                        <DockPanel>
                                            <TextBlock
                                                Text="0"/>
                                                <TextBlock
                                                    Margin="110 0"
                                                    Text="0"/>
                                                <TextBlock
                                                HorizontalAlignment="Right"
                                                Text="100"/>
                                        </DockPanel>
                                    </StackPanel>
                                    <toolkit:ColorPicker
                                        VerticalAlignment="Center"
                                        Width="24"
                                        Height="24"
                                        Margin="15 0"
                                        ShowDropDownButton="False"/>
                                </StackPanel>
                            </DockPanel>
                        </Border.Child>
                    </Border>
                </StackPanel>
            </Border.Child>
        </Border>
        <DockPanel>
            <Button
                Margin="5 0"
                Content="Цвета по умолчанию"
                Width="175"
                Height="25"
                Click="SetDefaultColorsHandler"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Button
                    Margin="5 0"
                    Content="ОК"
                    Width="50"
                    Height="25"
                    Click="OkHandler"/>
                <Button
                    Margin="5 0"
                    Content="Отмена"
                    Width="75"
                    Height="25"
                    Click="CancelHandler"/>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>
